{% extends 'layout.twig' %}

{% block content %}
    <h1>Agregar una tarea</h1>

    {% if statusMessage == -1 %}
        <div class="alert alert-danger" role="alert">{{ responseMessage }}</div>
    {% elseif statusMessage == 1 %}
        <div class="alert alert-success" role="alert">{{ responseMessage }}</div>
    {% endif %}

    <form method="post" action="/projects/php/tasks/add/" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tarea</label>
            <input class="form-control" id="name" type="text" name="name">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="fileItem">Archivo</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="file" name="image" aria-describedby="fileItem">
                <label class="custom-file-label" for="file">Elegir archivo</label>
            </div>
        </div>
        <div>
            <button class="btn btn-info" type="submit">Guardar tarea</button>
        </div>
    </form>

    <ul class="list-group mt-4">
        <li class="list-group-item">
            <a class="btn btn-link" href="/projects/php/tasks/">Volver a la lista de tareas</a>
        </li>
        <li class="list-group-item">
            <a class="btn btn-link" href="/projects/php/">Volver al inicio</a>
        </li>
    </ul>
{% endblock %}