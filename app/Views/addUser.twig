{% extends 'layout.twig' %}

{% block content %}
    <h1>Crear un usuario</h1>

    {% if statusMessage == -1 %}
        <div class="alert alert-danger" role="alert">{{ responseMessage }}</div>
    {% elseif statusMessage == 1 %}
        <div class="alert alert-success" role="alert">{{ responseMessage }}</div>
    {% endif %}

    <form method="post" action="/projects/php/users/add" enctype="multipart/form-data">
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" id="email" type="email" name="email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" id="password" type="password" name="password">
            <small class="form-text text-muted">Usar entre 3 a 8 caracteres alfanumÃ©ricos</small>
        </div>
        <div>
            <button class="btn btn-info" type="submit">Crear</button>
        </div>
    </form>

    <ul class="list-group mt-4">
        <li class="list-group-item">
            <a class="btn btn-link" href="/projects/php/users/">Volver a la lista de usuarios</a>
        </li>
        <li class="list-group-item">
            <a class="btn btn-link" href="/projects/php/">Volver al inicio</a>
        </li>
    </ul>
{% endblock %}